extends ../layout/index

block contenido
   div.py-3
      h1(class="text-4xl my-10 font-extrabold text-center") Bienes 
         span.font-normal.text-indigo-700 Raices
      h2(class="text-center text-3xl font-extrabold")= page

      if errores
         div(class="max-w-md mx-auto my-10")
            each error in errores
               p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg      

      div(class="mt-8 mx-auto max-w-md")
         div(class="bg-white py-8 px-4 shadows")
            //- Eliminamos el action para que se envie a la misma pagina
            form.space-y-4(method="POST" noValidate)     
               input(type="hidden" name="_csrf" value= csrfToken) 
               div
                  label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="password") Ingresa tu nuevo password
                  input(id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Nuevo Password" type="password" name="password")

                           
               input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-md font-bold" type="submit" value="Guardar Password")