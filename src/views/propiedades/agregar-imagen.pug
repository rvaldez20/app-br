extends ../layout/admin

block styles
   link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
   meta(name="csrf-token" content= csrfToken)

block contenido
   div.py-3
      h1(class="text-4xl my-10 font-extrabold text-center") Bienes 
         span.font-normal.text-indigo-700 Raices
      h2(class="text-center text-3xl font-extrabold")= page

      div(class="bg-white shadow py-8 px-4 my-10 rounded mx-auto max-w-4xl md:px-10")
         form(id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)
            input(type="hidden" name="_csrf" value= csrfToken)             

         button(id="publicar" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-800 text-white text-center rounded uppercase font-bold cursor-pointer" type="button") Publicar Propiedad 

block scripts
  script(src="/js/agregarImagen.js")